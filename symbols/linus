};


partial alphanumeric_keys
xkb_symbols "typematrix" {
   include "linus(basic)"

   name[Group1]="Linus (Typematrix)";
   key <TLDE>	{ [     grave, asciitilde,      section,  dead_tilde  ]	};
   key <AE01>	{ [         1,     exclam,   exclamdown,  onesuperior ]	};
