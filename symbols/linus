   key <AC04> { [ u, U, quotedbl ] };
   key <AC05> { [ i, I, slash ] };
   key <AC06> { [ d, D ] };
   key <AC07> { [ h, H ] };
   key <AC08> { [ t, T ] };
   key <AC09> { [ n, N ] };
   key <AC10> { [ s, S, ssharp ] };
   key <AC11> { [ minus, underscore ] };
   key <BKSL> { [ less, greater, bar ] };

   key <LSGT> { [ odiaeresis, Odiaeresis, oslash, Ooblique ] };
   key <AB01> { [ adiaeresis, Adiaeresis, ae, AE ] };
   key <AB02> { [ q, Q, less ] };
